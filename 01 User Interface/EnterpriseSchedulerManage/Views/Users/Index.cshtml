@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>系统登录</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link href="~/Content/adminlte/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/ui/global/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/adminlte/dist/css/AdminLTE.css" rel="stylesheet" />
    <link href="~/Content/plugins/iCheck/square/blue.css" rel="stylesheet" />
    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="http://www.layui.com/" target="_blank"><b>谐筑码库管理</b></a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">管理系统</p>
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" id="TxtNameId" placeholder="用户名">
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" id="TxtPwdId" placeholder="密码">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <input type="checkbox"> 记住我
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat" id="submitId">登录</button>
                    </div>
                    <!-- /.col -->
                </div>
        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <script src="~/Scripts/jquery-2.2.3.min.js"></script>
    <script src="~/Content/layui/lay/dest/layui.all.js"></script>
    <script src="~/Content/adminlte/bootstrap/js/bootstrap.js"></script>
    <script src="~/Content/plugins/iCheck/icheck.js"></script>
    <script>
         $(function () {
             $('input').iCheck({
                 checkboxClass: 'icheckbox_square-blue',
                 radioClass: 'iradio_square-blue',
                 increaseArea: '20%' // optional
             });

             $("#submitId").on("click", function () {
                 var txtName = $("#TxtNameId").val();
                 var txtpwd = $("#TxtPwdId").val();
                 if (txtName === "" || txtName === undefined || txtName == null) {
                     layer.msg("用户名不能为空", { icon: 5 });
                     return;
                 } else if (txtpwd === "" || txtpwd === undefined || txtpwd == null) {
                     layer.msg("密码不能为空", { icon: 5 });
                     return;
                 }

                 $.ajax({
                     url: "/Users/Login",
                     type: "Post",
                     data: { TxtNameId: txtName, TxtPwdId: txtpwd},
                     success: function (data) {
                         if (data === '登录成功') {
                             layer.msg(data, { icon: 6 });
                             window.location.href = "Home/Index";
                         }
                         else 
                             layer.msg(data, { icon: 5 });
                     }
                 });
             });
         });
    </script>
</body>
</html>