
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/custom/SynchronCustom.css" rel="stylesheet" />
<form class="layui-form" action="javascript:void()">
    <div class="layui-form-item" style="padding-bottom:-50px;">
        <div class="layui-inline">
            <label class="layui-form-label" style="width:86px;">同步内容</label>
            <div class="layui-input-inline">
                <select name="quiz" id="SynchronContentId" lay-filter="SynchronContent">
                    <option value="-1">请选择同步内容</option>
                </select>
            </div>
        </div>
        <div class="layui-inline">
            <label class="layui-form-label" style="width:86px;">数据来源</label>
            <div class="layui-input-inline">
                <select name="modules"  lay-filter="DataSource">
                    <option value="">请选择数据来源</option>
                    <option value="1">核心-复兴配置</option>
                </select>
            </div>
        </div>
        <div class="layui-inline">
            <label class="layui-form-label">码 值</label>
            <div class="layui-input-inline">
                <input type="text" id="codeId" name="email"  autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-inline">
            <label class="layui-form-label" style="width:86px;">起始日期</label>
            <div class="layui-input-inline">
                <input type="text" id="dateStartId" placeholder="请选择起始日" class="layui-input" onclick="layui.laydate({elem: this})">
            </div>
        </div>
        <div class="layui-inline">
            <label class="layui-form-label" style="width:86px;">截止日期</label>
            <div class="layui-input-inline">
                <input type="text" id="dateEndId" placeholder="请选择截止日" class="layui-input" onclick="layui.laydate({elem: this})">
            </div>
            <button class="layui-btn" id="SynchronSearchId">查 询</button>
            <button class="layui-btn" id="SynchronId">同 步</button>
            
        </div>
    </div>
</form>
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-3">
        <!-- 同步的目标源 -->
        <table class="layui-table" style="width:100%;">
            <colgroup>
                <col width="40">
                <col>
                <col>
            </colgroup>
            <thead>
                <tr>
                    <th><input type="checkbox" id="tagerAllId" lay-skin="primary" lay-filter="allChoose"></th>
                    <th>环境名称</th>
                    <th>环境类型</th>
                </tr>
            </thead>
            <tbody id="targetId"></tbody>
        </table>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-9">
        <table class="layui-table" style="width:100%;" id="CodeValuesId">
              
        </table>
    </div>
</div>
<script src="~/Scripts/jquery.min.js"></script>
<script type="text/javascript">
    var dat;
    $(function () {
        // 加载同步内容数据
        $.get("/SystemSetting/GetSyschronContext", function (result) {

            var res = result.Option;
            $("#SynchronContentId").append(res);

            var form = layui.form();
            form.render('select');
        });


        // 加载目标数据源
        $.get("/SystemSetting/GetTargetData", function (result) {
            var trStr = "";
            var resul = result.TartData;
            $.each(resul, function (index, item) {
                trStr += "<tr><td><input type='checkbox' id='" + item.Id +"' lay-skin='primary'></td><td>" + item.Name + "</td><td>" + item.Comment + "</td></tr>";
            });

            $("#targetId").append(trStr);

            var form = layui.form();
            form.render('checkbox');
        });


        var selectval = "";// 获取用户选择同步的内容
        var dataSource = "";// 获取数据来源
        var form = layui.form();
        form.on('select(SynchronContent)', function (data) {
            selectval = data.value; //得到被选中的值
        });
        form.on('select(DataSource)', function (data) {
            dataSource = data.value; // 得到被选中的数据来源
        });
        // 查询
        $("#SynchronSearchId").on("click", function () {
            if (selectval == "") {
                layer.msg("请选择同步内容！", {icon:5});
            } else if (dataSource == "") {
                layer.msg("请选择数据来源！", { icon: 5 });
            } else {
                var index = layer.load(0, { time: 30000 });
                var code = $("#codeId").val();
                var startDate = $("#dateStartId").val();
                var endDate = $("#dateEndId").val();
                var targetStr = "";
                $("#CodeValuesId").html(""); // 清空目标码表
                $.ajax({
                    url: "/SystemSetting/GetSynchronValues/",
                    type: "get",
                    data: { "synchronContent": selectval, "source": dataSource, "codeValue": code, "startDate": startDate, "endDate": endDate },
                    success: function (data, status) {
                        dat = data.Obj;
                        var targetStr = SelectMethod(selectval, dat);
                        $("#CodeValuesId").append(targetStr);

                        var form = layui.form();
                        form.render('checkbox');
                    }
                });
                layer.close(index);
            }
        });

        // 同步代码
        $("#SynchronId").on("click", function () {
            var index = layer.load(0, { time: 30000 });
            // 1. 有没有选择同步环境地址
            var targetArray = [];
            $("#targetId input").each(function (index, item) {
                var i = index;
                var m = item;
                if (item.checked) {
                    targetArray[index] = item.id + "";
                }
            });
            // 2. 有没有选择要同步的码值
            var codeArray = [];
            $("#CodeValuesId>tbody").find("input").each(function (index, item) {
                var i = index;
                var m = item;
                if (item.checked) {
                    codeArray[index] = item.id + "";
                }
            });

            if (targetArray.length <= 0) {
                layer.msg("请选择要同步的环境！", { icon: 5 });
            } else if (codeArray.length <= 0) {
                layer.msg("请选择要同步的码值！", { icon: 5 });
            } else {
                $.post("/SystemSetting/SynChronCodeByTarget", { "SynChronContent": selectval, "TargetArray": targetArray, "CodeArray": codeArray, "data": dat}, function (data,status) {
                    var da = data;
                    if (status == "success") {
                        layer.msg(data, { icon: 6 });
                    } else {
                        layer.msg(data, { icon: 5 });
                    }
                });
            }
           
            layer.close(index);
        });

        // 全选/全不选
        $("#tagerAllId").on('click', function () {
            if ($(this).prop('checked')) {
                $("#targetId").find("input").prop('checked', 'true');
            } else {
                $("#targetId").find("input").removeProp('checked');
            }
        });

        function SelectMethod(type,data) {
            var result = "";
            switch (type) {
                case "HPHP":  // 医院码
                    result += "<colgroup><col width='40'><col><col width='90'><col><col><col><col></colgroup><thead>";
                    result += "<tr><th><input type=\"checkbox\" onclick=\"FlowEdit(this)\" lay-skin=\"primary\" lay-filter=\"allChoose\"></th><th>医院编号</th><th>医院等级</th><th>医院类型</th><th>医院名称</th><th>医院别名</th><th>医院地址</th></tr></thead><tbody>";
                    $.each(data, function (index, item) {
                        var i = index;
                        var m = item;
                        result += "<tr><td><input type=\"checkbox\" id='" + item.SEQ + "' lay-skin=\"primary\"></td><td>" + item.HPHP_ID + "</td><td>" + item.SYSV_HPHP_CLASS + "</td><td>" + item.SYSV_HPHP_TYPE + "</td><td>" + item.HPHP_NAME + "</td><td>" + item.HPHP_OTH_NAME + "</td><td>" + item.HPHP_ADDR + "</td></tr>";
                    });
                    break;
                case "DADA":// 诊断码
                    result += "<colgroup><col width=\"40\"><col><col><col><col><col></colgroup><thead>";
                    result += "<tr><th><input type=\"checkbox\" onclick=\"FlowEdit(this)\" lay-skin=\"primary\" lay-filter=\"allChoose\"></th><th>诊断编号</th><th>诊断名称</th><th>性别</th><th>起始年龄</th><th>终止年龄</th></tr></thead><tbody>";
                    $.each(data, function (index, item) {
                        var i = index;
                        var m = item;
                        result += "<tr><td><input type=\"checkbox\" id='" + item.SEQ + "' lay-skin=\"primary\"></td><td>" + item.DADA_ID + "</td><td>" + item.DADA_DESC + "</td><td>" + item.DADA_SEX_IND + "</td><td>" + item.DADA_AGE_FROM + "</td><td>" + item.DADA_AGE_TO + "</td></tr>";
                    });
                    break;
                case "SPSP": // 诊疗码
                    result = "<colgroup><col width=\"40\"><col><col><col><col><col></colgroup><thead>";
                    result += "<tr><th><input type=\"checkbox\" lay-skin=\"primary\" lay-filter=\"allChoose\"></th><th>诊断编号</th><th>诊疗类型</th><th>诊疗等级</th><th>诊断名称</th><th>备注</th></tr></thead><tbody>";
                    $.each(data, function (index, item) {
                        var i = index;
                        var m = item;
                        result += "<tr><td><input type=\"checkbox\" id='" + item.SEQ + "' lay-skin=\"primary\"></td><td>" + item.SPSP_ID + "</td><td>" + item.SYSV_SPSP_TYPE + "</td><td>" + item.SYSV_SPSP_LEVEL + "</td><td>" + item.SPSP_DESC + "</td><td>" + item.COMMENT + "</td></tr>";
                    });
                    break;
                case "SPCT": //药品码
                    result = "<colgroup><col width=\"40\"><col><col><col></colgroup><thead>";
                    result += "<tr><th><input type=\"checkbox\" lay-skin=\"primary\" lay-filter=\"allChoose\"></th><th>药品码</th><th>药品名称</th><th>备注</th></tr></thead><tbody>";
                    $.each(data, function (index, item) {
                        var i = index;
                        var m = item;
                        result += "<tr><td><input type=\"checkbox\" id='" + item.SEQ + "' lay-skin=\"primary\"></td><td>" + item.SPCT_ID + "</td><td>" + item.SPCT_DESC + "</td><td>" + item.COMMENT + "</td></tr>";
                    });
                    break;
                case "DIDI": //药品适应症
                    result = "<colgroup><col width=\"40\"><col><col><col><col></colgroup><thead>";
                    result += "<tr><th><input type=\"checkbox\" lay-skin=\"primary\" lay-filter=\"allChoose\"></th><th>药品适应症码</th><th>起始码</th><th>结束码</th><th>备注</th></tr></thead><tbody>";
                    $.each(data, function (index, item) {
                        var i = index;
                        var m = item;
                        result += "<tr><td><input type=\"checkbox\" id='" + item.SEQ + "' lay-skin=\"primary\"></td><td>" + item.SPCT_ID + "</td><td>" + item.DADA_FROM + "</td><td>" + item.DADA_TO + "</td><td>" + item.DIDI_COMMENT + "</td></tr>";
                    });
                    break;
                case "DNDN": //药品码别名
                    result = "<colgroup><col width=\"40\"><col><col></colgroup><thead>";
                    result += "<tr><th><input type=\"checkbox\" lay-skin=\"primary\" lay-filter=\"allChoose\"></th><th>药品码别名码</th><th>药品码别名名称</th></tr></thead><tbody>";
                    $.each(data, function (index, item) {
                        var i = index;
                        var m = item;
                        result += "<tr><td><input type=\"checkbox\" id='" + item.SEQ + "' lay-skin=\"primary\"></td><td>" + item.SPCT_ID + "</td><td>" + item.SPCT_DESC + "</td></tr>";
                    });
                    break;
                case "SPON": //诊疗码别名
                    result = "<colgroup><col width=\"40\"><col><col></colgroup><thead>";
                    result += "<tr><th><input type=\"checkbox\" lay-skin=\"primary\" lay-filter=\"allChoose\"></th><th>诊疗码别名码</th><th>诊疗码别名</th></tr></thead><tbody>";
                    $.each(data, function (index, item) {
                        var i = index;
                        var m = item;
                        result += "<tr><td><input type=\"checkbox\" id='" + item.SEQ + "' lay-skin=\"primary\"></td><td>" + item.SPSP_ID + "</td><td>" + item.SPON_DESC + "</td></tr>";
                    });
                    break;
                case "DODO": //剂型码
                    result = "<colgroup><col width=\"40\"><col><col></colgroup><thead>";
                    result += "<tr><th><input type=\"checkbox\" lay-skin=\"primary\" lay-filter=\"allChoose\"></th><th>剂型码</th><th>剂型码名称</th></tr></thead><tbody>";
                    $.each(data, function (index, item) {
                        var i = index;
                        var m = item;
                        result += "<tr><td><input type=\"checkbox\" id='" + item.SEQ + "' lay-skin=\"primary\"></td><td>" + item.DODO_DESC + "</td><td>" + item.DODO_ALL_DESC + "</td></tr>";
                    });
                    break;
                case "DOOT": //剂型别名
                    result = "<colgroup><col width=\"40\"><col><col><col></colgroup><thead>";
                    result += "<tr><th><input type=\"checkbox\" lay-skin=\"primary\" lay-filter=\"allChoose\"></th><th>剂型别名码</th><th>剂型别名</th><th>备注</th></tr></thead><tbody>";
                    $.each(data, function (index, item) {
                        var i = index;
                        var m = item;
                        result += "<tr><td><input type=\"checkbox\" id='" + item.SEQ + "' lay-skin=\"primary\"></td><td>" + item.DODO_KY + "</td><td>" + item.DODO_DESC + "</td><td>" + item.COMMENT + "</td></tr>";
                    });
                    break;
                case "SHLS": //诊疗目录
                    result = "<colgroup><col width=\"40\"><col><col><col><col></colgroup><thead>";
                    result += "<tr><th><input type=\"checkbox\" lay-skin=\"primary\" lay-filter=\"allChoose\"></th><th>诊疗目录码</th><th>诊疗目录名</th><th>诊疗目录类型</th><th>备注</th></tr></thead><tbody>";
                    $.each(data, function (index, item) {
                        var i = index;
                        var m = item;
                        result += "<tr><td><input type=\"checkbox\" id='" + item.SEQ + "' lay-skin=\"primary\"></td><td>" + item.SHLS_LOW_ID + "</td><td>" + item.SHSH_KY + "</td><td>" + item.SHLS_SHIP_TYPE + "</td><td>" + item.SHLS_COMMENT + "</td></tr>";
                    });
                    break;
                case "STSP": //服务诊疗匹配
                    result = "<colgroup><col width=\"40\"><col><col><col><col></colgroup><thead>";
                    result += "<tr><th><input type=\"checkbox\" lay-skin=\"primary\" lay-filter=\"allChoose\"></th><th>服务诊疗匹配码</th><th>服务诊疗匹配名</th><th>服务诊疗匹配名</th><th>服务诊疗匹配名</th></tr></thead><tbody>";
                    $.each(data, function (index, item) {
                        var i = index;
                        var m = item;
                        result += "<tr><td><input type=\"checkbox\" id='" + item.SEQ + "' lay-skin=\"primary\"></td><td>" + item.STCV_PFX + "</td><td>" + item.SYSV_SPSP_IND + "</td><td>" + item.SYSV_CLIV_TYPE + "</td><td>" + item.SPSP_ID_LOW + "</td></tr>";
                    });
                    break;
                case "DCDC": //药品分类
                    result = "<colgroup><col width=\"40\"><col><col><col></colgroup><thead>";
                    result += "<tr><th><input type=\"checkbox\" lay-skin=\"primary\" lay-filter=\"allChoose\"></th><th>药品分类码</th><th>药品分类类型</th><th>药品分类名</th></tr></thead><tbody>";
                    $.each(data, function (index, item) {
                        var i = index;
                        var m = item;
                        result += "<tr><td><input type=\"checkbox\" id='" + item.SEQ + "' lay-skin=\"primary\"></td><td>" + item.DCDC_ID + "</td><td>" + item.DCDC_TYPE + "</td><td>" + item.DCDC_DESC + "</td></tr>";
                    });
                    break;
                default:
                    break;
            }
            result += "</tbody>";
            return result;
        }
    });

    function FlowEdit(curInput) {
        //layer.msg("你点击全选按钮！" + curInput.checked, { icon: 6 });
        if ($(curInput).prop("checked")) {
            $("#CodeValuesId>tbody").find("input").prop('checked', 'true');
        } else {
            $("#CodeValuesId>tbody").find("input").removeProp('checked');
        }
    }
</script>
<script src="~/Scripts/custom/SynchronCustom.js"></script>