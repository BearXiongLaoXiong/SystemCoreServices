<script type="text/javascript">
    $(function () {
        // 加载同步内容数据
        $.get("/SystemSetting/GetSyschronContext", function (result) {

            var res = result.Option;
            $("#SynchronContentId").append(res);

            var form = layui.form();
            form.render('select');
        });


        // 加载目标数据源
        $.get("/SystemSetting/GetTargetData", function (result) {

            var resul = result.TartData;
            $("#targetId").append(resul);
        });

        // 获取用户选择同步的内容
        var selectval = "";
        var form = layui.form();
        form.on('select(sadaS)', function (data) {
            selectval = data.value; //得到被选中的值
        });

        // 查询
        $("#SynchronSearchId").on("click", function () {
            var index = layer.load(0, { time: 30000 });

            var startDate = $("#dateStartId").val();
            var endDate = $("#dateEndId").val();
            $.ajax({
                url: "/SystemSetting/GetSynchronValues/",
                type: "get",
                data: { "synchronContent": selectval, "source": "复兴-配置", "codeValue": "12335", "startDate": startDate, "endDate": endDate },
                success: function (data) {
                    var dat = data;
                    $("#codeValuesId").html("");
                    $("#codeValuesId").append(dat);
                }
            });
            layer.close(index);
        });

        // 同步代码
        $("#SynchronId").on("click", function () {
            var index = layer.load(0, { time: 30000 });
            alert("你同步了");
            layer.close(index);
        });

    })
</script>
